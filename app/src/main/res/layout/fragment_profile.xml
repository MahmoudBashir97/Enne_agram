<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#CE4A3B"
        android:id="@+id/rell"

        >
        <TextView
            android:id="@+id/testResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Results"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="29dp"
            />

        <ImageButton
            android:id="@+id/share_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/testResult"
            android:layout_marginLeft="90dp"
            android:layout_centerVertical="true"
            android:background="#CE4A3B"
            android:src="@drawable/share"
            />

    </RelativeLayout>
    <View
        android:id="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#AFAFAF"
        android:layout_below="@+id/rell"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/profile_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vv"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:id="@+id/prof_rel"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#CE4A3B">
                <TextView
                    android:id="@+id/txt_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello!"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"/>
                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/txt_hello"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/tip1"
                    />
                <TextView
                    android:id="@+id/txt_type"
                    android:layout_below="@+id/img_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@+id/txt_type"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_below="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@+id/txt_desc"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:textAllCaps="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prof_rel">
                <TextView
                    android:id="@+id/slide_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="@+id/slide_type"
                    android:textSize="18sp"
                    android:textColor="#CE4A3B"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/side_type_text"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/slide_type"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Also,you are brave, pretentious, competitive, cranky, contending, guide, and protective."
                    android:textSize="13sp"
                    android:textColor="#CE4A3B"
                    android:textStyle="normal"
                    android:gravity="center_horizontal"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/slide_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                >
               <androidx.viewpager.widget.ViewPager
                   android:id="@+id/profile_pag"
                   android:layout_width="match_parent"
                   android:layout_height="180dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_below="@id/slide_rel"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    android:id="@+id/img_heart"
                    android:layout_width="45dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/heart"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/img_heart">

                    <TextView
                        android:id="@+id/question_slide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What types would have crush on you?"
                        android:textColor="#CE4A3B"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        />
                    <ImageView
                        android:id="@+id/next_btn"
                        android:layout_below="@+id/question_slide"
                        android:layout_width="128dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/next"
                        />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>