<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Crush_types"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:id="@+id/rel_crush">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backbutton"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crush Types"
            android:textColor="#CE4A3B"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/type1"
        android:layout_width="346dp"
        android:layout_height="93dp"
        android:background="@drawable/rectangle_18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rel_crush">
        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type 1"
            android:textSize="15dp"
            android:textColor="#4A4A4A"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/img_1"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:src="@drawable/tip1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/type2"
        android:layout_width="346dp"
        android:layout_height="93dp"
        android:background="@drawable/rectangle_18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/type1">
        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type 2"
            android:textSize="15dp"
            android:textColor="#4A4A4A"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:src="@drawable/tip2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="346dp"
        android:layout_height="93dp"
        android:background="@drawable/rectangle_18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/type2">
        <TextView
            android:id="@+id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type 2"
            android:textSize="15dp"
            android:textColor="#4A4A4A"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/img_3"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:src="@drawable/tip2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            />
    </RelativeLayout>


</RelativeLayout>