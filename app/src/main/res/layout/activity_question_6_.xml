<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rel_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txt_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish the Test"
            android:textSize="18sp"
            android:textColor="#CE4A3B"
            android:layout_centerHorizontal="true"
            />

        <View
            android:id="@+id/Viw_1"
            android:layout_below="@+id/txt_finish"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CE4A3B"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:layout_below="@+id/Viw_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" This part includes senteces that will determine your personality. Select the options that best describes you."
            android:textSize="13sp"
            android:textColor="#CE4A3B"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="30dp"
            android:padding="10dp"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_1"
        android:layout_above="@+id/Next_btn">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_choice"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/checkmark_green"
                    android:background="@drawable/rectangle_choice"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="I’m detailed in my observations"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_choice"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/ch_1"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:button="@drawable/toggle_selector_right"
                    android:background="@drawable/rectangle_choice"
                    android:textOn=""
                    android:textOff=""
                    android:padding="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="I maintain distance in my relationships"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_choice"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/ch_2"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:button="@drawable/toggle_selector_right"
                    android:background="@drawable/rectangle_choice"
                    android:textOn=""
                    android:textOff=""
                    android:padding="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="I care about self-sufficiency"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_choice"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/ch_3"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:button="@drawable/toggle_selector_right"
                    android:background="@drawable/rectangle_choice"
                    android:textOn=""
                    android:textOff=""
                    android:padding="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="I'm not bothered by loneliness"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_choice"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/ch_4"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:button="@drawable/toggle_selector_right"
                    android:background="@drawable/rectangle_choice"
                    android:textOn=""
                    android:textOff=""
                    android:padding="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="I am deeply interested in knowledge"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_choice"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/ch_5"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:button="@drawable/toggle_selector_right"
                    android:background="@drawable/rectangle_choice"
                    android:textOn=""
                    android:textOff=""
                    android:padding="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="I’m cool and calm"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_choice"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/ch_6"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:button="@drawable/toggle_selector_right"
                    android:background="@drawable/rectangle_choice"
                    android:textOn=""
                    android:textOff=""
                    android:padding="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="I don't talk much about myself"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_choice"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/ch_7"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:button="@drawable/toggle_selector_right"
                    android:background="@drawable/rectangle_choice"
                    android:textOn=""
                    android:textOff=""
                    android:padding="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="I'm distant to emotion"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_choice"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/ch_8"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:button="@drawable/toggle_selector_right"
                    android:background="@drawable/rectangle_choice"
                    android:textOn=""
                    android:textOff=""
                    android:padding="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/Next_btn"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/peace_back"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>