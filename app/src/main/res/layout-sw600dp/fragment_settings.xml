<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#FEFEFE"
        android:id="@+id/rell"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="25sp"
            android:textColor="#CE4A3B"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="29dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#AFAFAF"
        android:layout_below="@+id/rell"/>

    <RelativeLayout
        android:id="@+id/Relat_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/txt_Enn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share the App"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#5C5C5C"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            />

        <TextView
            android:id="@+id/Enn_define"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Enn"
            android:layout_marginTop="10dp"
            android:text="If you want to take more advantage of the app, you can share our application with your friends."
            android:textColor="#5C5C5C"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Relat_rate"
        android:layout_below="@+id/Relat_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/txt_Rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Us!"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#5C5C5C"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Rate"
            android:layout_marginTop="10dp"
            android:text="Give us 5 star in Google Play"
            android:textColor="#5C5C5C"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/retest_btn"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/peace_back"
        android:text="Retake the Test"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        />

</RelativeLayout>