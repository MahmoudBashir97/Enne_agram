<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAF9"
    >

    <RelativeLayout
        android:id="@+id/slide_Relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lin"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/img_v"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:src="@drawable/papericon" />

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_v"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="What is enneagram?"
            android:textColor="#4A4A4A"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="18dp"
            android:text="What motivates you? What are your \n
        focuses? How do you improve \n
        yourself? Finish the test and get the\n
    results!"
            android:textColor="#8A8A8A"
            android:textSize="22sp"
            android:textStyle="normal"
            android:gravity="center"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:id="@+id/start_btn"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:background="@drawable/startnow"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textAllCaps="false"
            />
    </LinearLayout>

</RelativeLayout>